@page "/library/{albumId:guid}"

<div class="p-8">
    <button
        type="button"
        class="text-white text-2xl font-semibold hover:underline cursor-pointer">
        @Artists
    </button>

    <div class="py-1.5"></div>

    <div class="flex items-center w-full relative h-full">
        <button class="cursor-pointer">
            <img width="140" src="@AlbumCover">
        </button>

        <div class="flex w-full ml-5">
            <div style="font-size: 33px;"
                 class="text-white absolute w-full hover:underline cursor-pointer top-0 font-semibold hidden sm:flex">
                @AlbumName
            </div>
            <div class="text-gray-300 text-[13px] hidden md:flex">
                <div class="">
                    Album
                </div>
                <div class="ml-2 flex">
                    <div class="h-[4px] w-[4px] rounded-full bg-[rgb(189,189,189)] mt-[9px] mr-2">
                    </div>
                    <span class="-ml-0.5">@ReleaseYear</span>
                </div>
                <div class="ml-2 flex">
                    <div class="h-[4px] w-[4px] rounded-full bg-[rgb(189,189,189)] mt-[9px] mr-2">
                    </div>
                    <span class="-ml-0.5">@Songs.Count songs</span>
                </div>
            </div>

            <div class="absolute flex gap-4 items-center justify-start bottom-0 mb-1.5">
                <button type="button" class="p-1 rounded-full bg-white" @onclick="QueueAndPlayAlbum">
                    @if(IsPlaying)
                    {
                        <PauseIcon Fill="#181818" />
                    }
                    else
                    {
                        <PlayCircleIcon Fill="#181818" />
                    }
                </button>
                <button type="button">
                    <HeartIcon Fill="#1BD760" />
                </button>
                <button type="button">
                    <ThreeHorizontalDotsIcon />
                </button>
            </div>
        </div>

    </div>

    <div class="mt-6"></div>

    <div class="flex items-center justify-between px-5 pt-2">
        <div class="flex items-center justify-between text-gray-400">
            <div class="mr-7">#</div>
            <div class="text-sm">Title</div>
        </div>
        <div>
            <ClockIcon Width="18" Heigth="18"/>
        </div>
    </div>
    <div class="border-b border-b-[#2A2A2A] mt-2"></div>
    <div class="mb-4"></div>
    <ul class="w-full">
        @for (int i = 0; i < Songs.Count; i++)
        {
            var song = Songs[i];
            <SongRow SongId=song.Id Index=(i+1) />
        }
    </ul>

</div>